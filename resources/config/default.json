  },
  "application": {
    "rawThreadLimit": 100,
    "account": {
      "requireInDB": true,
      "useRwForQuest": false,
      "useRwForRaid": false,
      "useRwForPokes": false
    },
    "loginLimit": {
      "enabled": false,
      "count": 15,
      "interval": 300
