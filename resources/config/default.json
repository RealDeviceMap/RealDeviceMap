    "map": {
      "generateImages": true,
      "ivWeatherClearing": true,
      "saveCellPokemon": true,
      "scanLureEncounter": false,
      "saveSpawnPointLastSeen": false
    },
    "memoryCache": {
      "enabled": true,
      "clearInterval": 900,
      "keepTime": 3600
    },
    "clearer": {
      "pokemon": {
        "enabled": true,
        "interval": 300,
        "keepTime": 3600,
        "batchSize": 250
      },
      "incident": {
        "enabled": true,
        "interval": 900,
        "keepTime": 3600,
        "batchSize": 250
      }
    },
    "stats": {
      "pokemon": {
        "archive": false,
        "timing": false,
        "count": true
      }
    },
    "pvp": {
      "enabled": true,
      "levelCaps": [50],
      "defaultRank": "ordinal",
      "filterLittleMinCP": 450,
      "filterGreatMinCP": 1400,
      "filterUltraMinCP": 2350
    },
    "webhook": {
      "endpointTimeout": 30,
      "endpointConnectTimeout": 30
    },
    "quest": {
        "allowARQuests": true,
        "questRetryLimit": 10,
        "spinDistance": 80
    },
    "scanModes": 
    {
        "auto" :
        {
            "useLastSeenTime": 7200,
            "requeryFrequency": 3600,
            "minSpawnTime": 1500,
            "bufferTime": 30,
            "sleepInterval": 10,
            "defaultLongitude": 0.00,
            "defaultLatitude": 0.00
        },
        "tth":
        {
            "requeryFrequency": 90,
            "clusterUsingKoji": true,
            "clusteringRadius": 70,
            "deviceTimeout": 300,
            "hopTime": 3.10
        }
    },
    "koji": 
    {
      "url": "",
      "secret": ""
