{{> header}}

<style>
    table.dataTable tbody td {
        vertical-align: middle;
    }
</style>

<script>
    $(document).ready(function() {
        const table = $('#table').DataTable( {
            "stateSave": true,
            "ajax": {
                "url": "/api/get_data?show_discordrules=true&formatted=true",
                "dataSrc": "data.discordrules"
            },
            "paging":   true,
            "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
            "columns": [
                { "data": "priority" },
                { "data": "server.name" },
                { "data": "role.name" },
                { "data": "group_name" },
                { "data": "buttons" }
            ],
            "info":     true,
            "order": [[ 0, "desc" ]],
            "search.caseInsensitive": true,
            "columnDefs": [ {
                "targets": [4],
                "orderable": false
            }],
            "responsive": true
        });
    } );
</script>

<body>

    <br>
    <h1 align="center">Configure {{title}}'s Discord Rules!</h1>
    <br>
    <div style="width:90%; margin-left:calc(5%);">
        <a href="/dashboard/discordrule/add" role="button" style="float: right;" class="btn btn-success">Add New Discord Rule</a>
        <br><br>
        <table id="table" class="table table-striped table-bordered dt-responsive nowrap" style="position: center; width:100%">
            <thead>
            <tr>
                <th>Priority</th>
                <th>Server</th>
                <th>Role</th>
                <th>Group</th>
                <th width="5%"></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <br>
</body>
